<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:background="#F2F2F2"

        tools:ignore="MissingClass">



    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/customAppBar"

            android:layout_width="0dp"

            android:layout_height="56dp"

            android:background="#3F51B5"

            android:elevation="4dp"

            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent">



        <ImageButton

                android:id="@+id/btnBackDashboard"

                android:layout_width="48dp"

                android:layout_height="48dp"

                android:background="?attr/selectableItemBackgroundBorderless"

                android:scaleType="fitCenter"

                android:src="@drawable/baseline_keyboard_arrow_left_24"

                app:tint="@android:color/white"

                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_marginStart="4dp"

                android:contentDescription="Back"/>



        <TextView

                android:id="@+id/tvDashboardTitle"

                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"

                android:text="Model Performance Dashboard"

                android:textAlignment="center"

                android:textColor="@android:color/white"

                android:textSize="20sp"

                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toEndOf="@id/btnBackDashboard"

                app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>



    <ScrollView

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:padding="16dp"

            android:clipToPadding="false"

            app:layout_constraintTop_toBottomOf="@id/customAppBar"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent">



        <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="vertical">


            <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="1. Prediction Quality (Average)"

                    android:textStyle="bold"

                    android:textColor="#3F51B5"

                    android:layout_marginBottom="8dp" />

            <HorizontalScrollView

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:background="#FAFAFA"

                    android:padding="8dp"

                    android:layout_marginBottom="24dp">

                <TableLayout

                        android:id="@+id/tableQuality"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:stretchColumns="0" />

            </HorizontalScrollView>


            <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="2. Safety Metrics (Average)"

                    android:textStyle="bold"

                    android:textColor="#3F51B5"

                    android:layout_marginBottom="8dp" />

            <HorizontalScrollView

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:background="#FAFAFA"

                    android:padding="8dp"

                    android:layout_marginBottom="24dp">

                <TableLayout

                        android:id="@+id/tableSafety"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:stretchColumns="0" />

            </HorizontalScrollView>


            <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="3. On-Device Efficiency (Average)"

                    android:textStyle="bold"

                    android:textColor="#3F51B5"

                    android:layout_marginBottom="8dp" />

            <HorizontalScrollView

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:background="#FAFAFA"

                    android:padding="8dp"

                    android:layout_marginBottom="32dp">

                <TableLayout

                        android:id="@+id/tableEfficiency"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:stretchColumns="0" />

            </HorizontalScrollView>



        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>